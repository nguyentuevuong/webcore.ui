{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "strict": true,
    "types": [
      "es6-promise",
      "webpack-env"
    ],
    "baseUrl": "ClientApp",
    "paths": {
      "@app": [
        "@app/*"
      ],
      "@views": [
        "views/*"
      ],
      "@components": [
        "components/*"
      ]
    }
  },
  "exclude": [
    "bin",
    "node_modules"
  ]
}